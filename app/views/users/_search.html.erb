<table class='table table-hover table-inverse'>

    <thead>
        <tr>
            <th></th>
            <th>name</th>
            <th>introduction</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="user">
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"50x50") %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
    </tbody>
</table>