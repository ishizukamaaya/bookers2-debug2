<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">


      <h4 class="mt-5">カテゴリの追加</h4>
        <%= form_with model: @category, local: true do |f| %>
          <div class="from_input">
            <%= f.label :名前 %>
            <%= f.text_field :name %>
            <%= f.submit "登録する",class: "btn btn-primary" %>
          </div>

        <% end %>

        <h4 class="mt-5">カテゴリ一覧</h4>
          <table class="table table-hover">
            <thead>
              <th>カテゴリ</th>
              <th></th>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= link_to "編集する", edit_category_path(category), class: "btn btn-success" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

    </div>
  </div>
</div>